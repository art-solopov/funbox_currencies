<!DOCTYPE html>
<html>
  <head>
    <title>Funbox Currencies</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if (faye_server = Rails.application.config.faye_server).present? %>
        <script type="text/javascript" src="<%= faye_server %>/client.js"></script>
    <% end %>
  </head>

  <body>
    <header>
      <nav class="app-navbar">
        <%= link_to 'Funbox Currencies', root_path, class: 'app-navbar__brand' %>
        <%= link_to 'Admin', admin_path %>
      </nav>
    </header>
    <main class="container">
      <%= yield %>
    </main>
    <footer></footer>
  </body>
</html>
