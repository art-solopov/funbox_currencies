<!DOCTYPE html>
<html>
  <head>
    <title>Funbox Currencies</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if (pusher_app = Pusher.app_id).present? %>
        <script src="https://js.pusher.com/4.0/pusher.min.js"></script>
    <% end %>
  </head>

  <body>
    <header>
      <nav class="app-navbar">
        <%= link_to 'Funbox Currencies', root_path, class: 'app-navbar__brand' %>
        <%= link_to t('helpers.admin_name'), admin_path %>
      </nav>
    </header>
    <main class="container">
      <%= yield %>
    </main>
    <footer></footer>
  </body>
</html>
